@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th colspan="2">Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@customer.Id">Edit</a>
                </td>
                <td>
                    <button type="submit" asp-route-id="@customer.Id" asp-page-handler="delete">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a asp-page="./Create">Create</a>
</form>